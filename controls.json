{
  "schema_version": 2,
  "controls": [
    {
      "id": "units_system",
      "label": "Units System",
      "group": "Units",
      "module": "driving",
      "path": "units.system",
      "type": "select",
      "value_type": "str",
      "values": ["metric", "imperial"],
      "description": "Switch between metric and imperial display units."
    },
    {
      "id": "ac_power",
      "label": "AC Power",
      "group": "AC",
      "module": "driving",
      "path": "ac.power",
      "type": "toggle",
      "value_type": "bool",
      "description": "Turn air conditioning on or off."
    },
    {
      "id": "ac_temperature_c",
      "label": "AC Temperature",
      "group": "AC",
      "module": "driving",
      "path": "ac.temperature_c",
      "type": "slider",
      "value_type": "int",
      "min": 16,
      "max": 27,
      "step": 1,
      "units": "C",
      "visible_when": {"path": "units.system", "equals": "metric"},
      "description": "Target cabin temperature (C)."
    },
    {
      "id": "ac_temperature_f",
      "label": "AC Temperature",
      "group": "AC",
      "module": "driving",
      "path": "ac.temperature_f",
      "maps_to": "ac.temperature_c",
      "conversion": "f_to_c",
      "type": "slider",
      "value_type": "int",
      "min": 60,
      "max": 80,
      "step": 1,
      "units": "F",
      "visible_when": {"path": "units.system", "equals": "imperial"},
      "description": "Target cabin temperature (F)."
    },
    {
      "id": "seat_heating_driver",
      "label": "Driver Heat Level",
      "group": "Seat Heating",
      "module": "driving",
      "path": "seat_heating.driver_level",
      "type": "slider",
      "value_type": "int",
      "min": 0,
      "max": 3,
      "step": 1,
      "units": "level",
      "description": "Driver seat heating intensity."
    },
    {
      "id": "seat_heating_passenger",
      "label": "Passenger Heat Level",
      "group": "Seat Heating",
      "module": "driving",
      "path": "seat_heating.passenger_level",
      "type": "slider",
      "value_type": "int",
      "min": 0,
      "max": 3,
      "step": 1,
      "units": "level",
      "description": "Passenger seat heating intensity."
    },
    {
      "id": "seat_cooling_driver",
      "label": "Driver Cool Level",
      "group": "Seat Cooling",
      "module": "driving",
      "path": "seat_cooling.driver_level",
      "type": "slider",
      "value_type": "int",
      "min": 0,
      "max": 3,
      "step": 1,
      "units": "level",
      "description": "Driver seat cooling intensity."
    },
    {
      "id": "seat_cooling_passenger",
      "label": "Passenger Cool Level",
      "group": "Seat Cooling",
      "module": "driving",
      "path": "seat_cooling.passenger_level",
      "type": "slider",
      "value_type": "int",
      "min": 0,
      "max": 3,
      "step": 1,
      "units": "level",
      "description": "Passenger seat cooling intensity."
    },
    {
      "id": "tacc_enabled",
      "label": "Cruise Control Enabled",
      "group": "Traffic-Aware Cruise",
      "module": "driving",
      "path": "tacc.enabled",
      "type": "toggle",
      "value_type": "bool",
      "description": "Turn traffic-aware cruise control on or off."
    },
    {
      "id": "tacc_speed_kph",
      "label": "Car Speed",
      "group": "Traffic-Aware Cruise",
      "module": "driving",
      "path": "tacc.car_speed_kph",
      "type": "slider",
      "value_type": "int",
      "min": 0,
      "max": 150,
      "step": 1,
      "units": "km/h",
      "visible_when": {"path": "units.system", "equals": "metric"},
      "description": "Simulated current speed of the car (km/h)."
    },
    {
      "id": "tacc_speed_mph",
      "label": "Car Speed",
      "group": "Traffic-Aware Cruise",
      "module": "driving",
      "path": "tacc.car_speed_mph",
      "maps_to": "tacc.car_speed_kph",
      "conversion": "mph_to_kph",
      "type": "slider",
      "value_type": "int",
      "min": 0,
      "max": 95,
      "step": 1,
      "units": "mph",
      "visible_when": {"path": "units.system", "equals": "imperial"},
      "description": "Simulated current speed of the car (mph)."
    },
    {
      "id": "tacc_follow_distance",
      "label": "Follow Distance",
      "group": "Traffic-Aware Cruise",
      "module": "driving",
      "path": "tacc.follow_distance",
      "type": "select",
      "value_type": "int",
      "values": [1, 2, 3, 4],
      "units": "car lengths",
      "description": "Following distance setting."
    },
    {
      "id": "wiper_mode",
      "label": "Wiper Mode",
      "group": "Wipers",
      "module": "driving",
      "path": "wipers.mode",
      "type": "select",
      "value_type": "str",
      "values": ["auto", "manual"],
      "description": "Automatic rain sensing or manual frequency."
    },
    {
      "id": "wiper_frequency",
      "label": "Wiper Frequency",
      "group": "Wipers",
      "module": "driving",
      "path": "wipers.frequency_level",
      "type": "slider",
      "value_type": "int",
      "min": 1,
      "max": 5,
      "step": 1,
      "units": "level",
      "description": "Manual wipe frequency level."
    },
    {
      "id": "infotainment_power",
      "label": "Infotainment Power",
      "group": "Infotainment",
      "module": "infotainment",
      "path": "infotainment.power",
      "type": "toggle",
      "value_type": "bool",
      "description": "Turn the infotainment system on or off."
    },
    {
      "id": "infotainment_volume",
      "label": "Volume",
      "group": "Infotainment",
      "module": "infotainment",
      "path": "infotainment.volume",
      "type": "slider",
      "value_type": "int",
      "min": 0,
      "max": 40,
      "step": 1,
      "units": "level",
      "description": "Audio output volume level."
    },
    {
      "id": "infotainment_active_app",
      "label": "Active App",
      "group": "Infotainment",
      "module": "infotainment",
      "path": "infotainment.active_app",
      "type": "select",
      "value_type": "str",
      "values": [
        "Radio",
        "Bluetooth",
        "Screencast",
        "YouTube",
        "Netflix",
        "Twitch",
        "Game Streaming",
        "Navigation",
        "Podcasts",
        "Weather",
        "Local Games",
        "Other Apps"
      ],
      "description": "Select the active infotainment app."
    },
    {
      "id": "infotainment_radio_band",
      "label": "Radio Band",
      "group": "Radio",
      "module": "infotainment",
      "path": "infotainment.radio_band",
      "type": "select",
      "value_type": "str",
      "values": ["AM", "FM"],
      "visible_when": {"path": "infotainment.active_app", "equals": "Radio"},
      "description": "AM or FM radio band."
    },
    {
      "id": "infotainment_bluetooth_connected",
      "label": "Bluetooth Connected",
      "group": "Bluetooth",
      "module": "infotainment",
      "path": "infotainment.bluetooth_connected",
      "type": "toggle",
      "value_type": "bool",
      "visible_when": {"path": "infotainment.active_app", "equals": "Bluetooth"},
      "description": "Simulate Bluetooth device connection."
    },
    {
      "id": "infotainment_screencast_active",
      "label": "Screencast Active",
      "group": "Screencast",
      "module": "infotainment",
      "path": "infotainment.screencast_active",
      "type": "toggle",
      "value_type": "bool",
      "visible_when": {"path": "infotainment.active_app", "equals": "Screencast"},
      "description": "Mirror a device to the car display."
    },
    {
      "id": "infotainment_local_game",
      "label": "Local Game",
      "group": "Local Games",
      "module": "infotainment",
      "path": "infotainment.local_game",
      "type": "select",
      "value_type": "str",
      "values": ["Elden Ring", "Counter Strike 2", "League of Legends"],
      "visible_when": {"path": "infotainment.active_app", "equals": "Local Games"},
      "description": "Installed game to launch on the infotainment display."
    }
  ]
}
